<h1><%= session[:game].questions[session[:next_page]-1].dialog %></h1>
<div style="text-align: left">


  <form action="/next/<%= session[:next_page] %>" method="post">
    <% for option in session[:game].questions[session[:next_page]-1].options.shuffle %>
        <input type="radio" name="answer" value="<%= option %>" id="<%= option.downcase.gsub(' ', '_') %>"><%= option %>
        <br>
    <% end %>
    <input type="submit" name="enviar" id="validar" value="Go">
  </form>
  <details>
    <summary>Hint!</summary>
    <p><%= session[:game].questions[session[:next_page]-1].hint %></p>
  </details>

</div>